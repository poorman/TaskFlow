# TaskFlow Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=taskflow
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=taskflow
DATABASE_URL=postgresql://taskflow:your-secure-postgres-password-here@postgres:5432/taskflow

# ============================================
# Security & Authentication
# ============================================
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3014,https://admin.widesurf.com

# ============================================
# Google OAuth (Optional - for Google Sign-In)
# ============================================
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://admin.widesurf.com/api/v1/auth/google/callback

# ============================================
# Stripe (Optional - for SaaS subscriptions)
# ============================================
# Get these from: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# Environment
# ============================================
ENVIRONMENT=development

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=https://admin.widesurf.com
